#include <stdio.h>
#include <math.h>
int main(){
   float a,b,c,area;
     scanf("%f%f%f",&a,&b,&c);
     if(a==0 || b==0 || c==0){
          area=((a+b)*c)/2;
          printf("Area = %.1f\n",area);
     }else{    
          if((a+b>c) && (a+c>b) && (c+b>a)){
               printf("Perimetro = %.1f\n",a+b+c);
          }else{
               area=((a+b)*c)/2;
               printf("Area = %.1f\n",area);
          }         
     }   
     return 0;
}
