#include <stdio.h>

int main() {
    int n,qtdAdaptadores,adaptador,contFuros=0;
    scanf("%d",&n);

    for(int i=0;i<n;i++){
        scanf("%d",&qtdAdaptadores);
        for(int i=0;i<qtdAdaptadores;i++){
            scanf("%d",&adaptador);
            contFuros+=adaptador;
        }
        printf("%d\n",contFuros-(qtdAdaptadores-1));
        contFuros=0;
    }
    return 0;
}
