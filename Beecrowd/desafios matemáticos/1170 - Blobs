#include <stdio.h>

int main() {
    int n,dia=0;
    float quantidade=0.0;
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        scanf("%f",&quantidade);
        while(quantidade>1){
            quantidade/=(2*1.0);
            dia++;
        }
        printf("%d dias\n",dia);
        dia=0;
        quantidade=0.0;
    }
    return 0;
}
